<?xml version="1.0"?>
<block>
  <name>TDD Frame Detector</name>
  <key>gfdm_frame_energy_detector_cc</key>
  <category>GFDM</category>
  <import>import gfdm</import>
  <make>gfdm.frame_energy_detector_cc($alpha, $average_len, $frame_len, $backoff_len, $tag_key)</make>

  <callback>set_alpha($alpha)</callback>
  <callback>set_backoff_len($backoff_len)</callback>
  <param>
    <name>Alpha</name>
    <key>alpha</key>
    <type>float</type>
  </param>

  <param>
    <name>Average Length</name>
    <key>average_len</key>
    <type>int</type>
  </param>

  <param>
    <name>Frame Length</name>
    <key>frame_len</key>
    <type>int</type>
  </param>

  <param>
    <name>Backoff Length</name>
    <key>backoff_len</key>
    <type>int</type>
  </param>

  <param>
    <name>Tag Key</name>
    <key>tag_key</key>
    <type>string</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
